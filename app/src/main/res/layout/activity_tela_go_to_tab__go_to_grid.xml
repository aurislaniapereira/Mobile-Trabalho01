<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaGoToTab_GoToGrid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FDFCFF"
            android:gravity="center|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="#130EA3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#130EA3"
                    android:text="Ultimas funcionalidades"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F6F2F2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="704dp"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewGridView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="Aperte no botão para ir ao exemplo de GridView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#0C0C0C" />

                <Button
                    android:id="@+id/button_goGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ir"
                    app:backgroundTint="#130EA3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="515dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textViewTabs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clique no botão para ir a um exemplo de Tabs"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#0B0A0A" />

                    <Button
                        android:id="@+id/button_goTabs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ir"
                        app:backgroundTint="#130EA3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="234dp"
                        android:gravity="bottom|center"
                        android:orientation="vertical">


                        <Button
                            android:id="@+id/buttonback4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/botao"
                            android:text="Back"
                            android:textColor="#FAFAFD"
                            app:backgroundTint="#130EA3"
                            tools:text="Back" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>